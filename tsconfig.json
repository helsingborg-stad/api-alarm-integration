{
  "compilerOptions": {
    // Use for browser
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",

    // Uncomment for Nodejs
    // "target": "ESNext",
    // "module": "NodeNext",
    //"moduleResolution": "nodenext",
    "isolatedModules": true,
    "outDir": "assets/dist/js",
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true
  },
  "exclude": [],
  "include": ["./source/js/**/*.ts"]
}
